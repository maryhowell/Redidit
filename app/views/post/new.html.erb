<% provide(:title, 'Post new message') %>
<h1>Post Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for post, url: posts_path do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.email_field :content, class: 'form-control' %>

      <%= f.label :board %>
      <%= f.password_field :board, class: 'form-control' %>

      <button class="btn btn-primary">Post</button>
    <% end %>
  </div>
</div>
