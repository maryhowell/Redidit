<h2><%= @board.name%></h2>
<%= form_for @board, url: new_post_path, method: :get do |f| %>
<%= f.hidden_field :board_id, value: @board.id %>
<button class="btn btn-primary">Write a Post</button>
<% end %>


<% @board.posts.each do |post| %>
<div class="well well-lg">
  <tr class="active">
    <p>Title:</p>
    <td><%= post.title %></td>
    <p>Content:</p>
    <td class="well well-lg"><%= post.content %></td>
    <div>
      <%= link_to 'Delete', post_path(post), method: :delete, class: "btn btn-default btn-xs" %>


      <div id="new-counter">

        <p class="result"></p>

         <!-- <span class= "like-<%= post.id %>"> -->
        <button class="btn btn-primary" id="add" data-post-id = "<%= post.id %>">+</button>
        <%= link_to like_post_path(post), method: :put, remote: true, class: 'like' do %>
        <%end%>

        <!-- <span class= "dislike-<%= post.id %>"> -->
        <button class="btn btn-primary" id="sub" data-post-id = "<%= post.id %>">-</button>
        <%= link_to dislike_post_path(post), method: :put, remote: true, class: 'dislike' do %>
        <%end%>

        <button class="btn btn-primary" id="reset">Reset</button>
        <button class="btn btn-primary" id="clearlog">Clear Log</button>
        <ul class="vote-list"></ul>

      </div>

      </div
    </tr>
  </div>
  <%end%>
