<% provide(:title, 'Make a new Board') %>
<h1>Post Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @board, url: boards_path do |f| %>

      <%= f.label :name%>
      <%= f.text_field :name, class: 'form-control' %>

      <button class="btn btn-primary">Post</button>
    <% end %>
  </div>
</div>
